{
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./dist/**/*",
        "./.cache/**/*",
        "./public/**/*"
    ],
    "compilerOptions": {
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "jsx": "react",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
}
